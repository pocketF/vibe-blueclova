{
  "name": "blue-clova",
  "version": "1.0.0",
  "description": "Cloudflare Stream video upload with Firebase",
  "private": true,
  "homepage": "https://blueclova.com",
  "dependencies": {
    "axios": "^1.6.2",
    "firebase": "^10.7.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run move-build",
    "build:original": "react-scripts build",
    "move-build": "node -e \"const fs = require('fs'); if (fs.existsSync('build')) { if (fs.existsSync('dist')) fs.rmSync('dist', {recursive: true}); fs.renameSync('build', 'dist'); console.log('Build folder renamed to dist'); }\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "http-proxy-middleware": "^3.0.5"
  }
}
